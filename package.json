{
    "name": "sm-chrome-popup",
    "version": "1.0.0",
    "description": "Chrome Extension",
    "repository": {
      "type": "git",
      "url": "git+https://github.com/andrew-kamenchuk/sm-chrome-popup.git"
    },
    "keywords": [
        "chrome",
        "extension",
        "history",
        "bookmarks",
        "cookies"
    ],
    "scripts": {
        "clean": "rm -rf ./build ./dist",
        "prepare": "mkdir ./dist ./build && cp ./src/manifest.json ./src/icon.png ./src/popup.html ./dist",
        "styles": "lessc ./src/popup.less ./build/popup.css && cleancss -o ./dist/popup.css ./build/popup.css",
        "webpack": "webpack ./src/popup.js ./build/popup.js",
        "babel": "babel ./build/popup.js --out-file ./dist/popup.js",
        "scripts": "npm run webpack && npm run babel",
        "build": "npm run clean && npm run prepare && npm run styles && npm run scripts"
    },
    "author": "Andrew Kamenchuk <andrew.kamenchuk@gmail.com>",
    "license": "MIT",
    "devDependencies": {
        "babel-cli": "^6.24.0",
        "babel-preset-env": "^1.2.1",
        "clean-css-cli": "^4.0.8",
        "less": "^2.7.2",
        "webpack": "^2.2.1"
    },
    "babel": {
        "presets": [
            [ "env", { "targets": { "chrome": 57 } } ]
        ]
    }
}
